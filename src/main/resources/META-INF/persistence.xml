<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
    <persistence-unit name="MedicalPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.medxpertise.medicaltelexpertise.domain.model.User</class>
        <class>org.medxpertise.medicaltelexpertise.domain.model.Admin</class>
        <class>org.medxpertise.medicaltelexpertise.domain.model.Nurse</class>
        <class>org.medxpertise.medicaltelexpertise.domain.model.Doctor</class>
        <class>org.medxpertise.medicaltelexpertise.domain.model.Generalist</class>
        <class>org.medxpertise.medicaltelexpertise.domain.model.Specialist</class>
        <class>org.medxpertise.medicaltelexpertise.domain.model.AuditLog</class>
        <class>org.medxpertise.medicaltelexpertise.domain.model.Acte</class>
        <class>org.medxpertise.medicaltelexpertise.domain.model.Medication</class>
        <class>org.medxpertise.medicaltelexpertise.domain.model.QueueEntry</class>
        <class>org.medxpertise.medicaltelexpertise.domain.model.VitalSign</class>
        <class>org.medxpertise.medicaltelexpertise.domain.model.SpecialistProfile</class>
        <class>org.medxpertise.medicaltelexpertise.domain.model.ExpertiseRequest</class>
        <class>org.medxpertise.medicaltelexpertise.domain.model.Patient</class>
        <class>org.medxpertise.medicaltelexpertise.domain.model.Report</class>
        <class>org.medxpertise.medicaltelexpertise.domain.model.Timeslot</class>
        <class>org.medxpertise.medicaltelexpertise.domain.model.Notification</class>
        <class>org.medxpertise.medicaltelexpertise.domain.model.Consultation</class>
        <class>org.medxpertise.medicaltelexpertise.domain.model.Prescription</class>
        <class>org.medxpertise.medicaltelexpertise.domain.model.BaseUser</class>


        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/medical_project"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="malik"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>

    </persistence-unit>
</persistence>
