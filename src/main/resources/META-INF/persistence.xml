  <?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
  <persistence-unit name="medicalPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

      <class>org.medicalproject.medicalproject.domain.model.User</class>
      <class>org.medicalproject.medicalproject.domain.model.Admin</class>
      <class>org.medicalproject.medicalproject.domain.model.Nurse</class>
      <class>org.medicalproject.medicalproject.domain.model.Doctor</class>
      <class>org.medicalproject.medicalproject.domain.model.Generalist</class>
      <class>org.medicalproject.medicalproject.domain.model.Specialist</class>
      <class>org.medicalproject.medicalproject.domain.model.Patient</class>
      <class>org.medicalproject.medicalproject.domain.model.VitalSign</class>
      <class>org.medicalproject.medicalproject.domain.model.QueueEntry</class>
      <class>org.medicalproject.medicalproject.domain.model.Consultation</class>
      <class>org.medicalproject.medicalproject.domain.model.ExpertiseRequest</class>
      <class>org.medicalproject.medicalproject.domain.model.SpecialistProfile</class>
      <class>org.medicalproject.medicalproject.domain.model.Timeslot</class>
      <class>org.medicalproject.medicalproject.domain.model.Acte</class>
      <class>org.medicalproject.medicalproject.domain.model.Prescription</class>
      <class>org.medicalproject.medicalproject.domain.model.Medication</class>
      <class>org.medicalproject.medicalproject.domain.model.Report</class>
      <class>org.medicalproject.medicalproject.domain.model.Notification</class>
      <class>org.medicalproject.medicalproject.domain.model.AuditLog</class>



      <properties>
      <!-- JDBC configuration for development convenience -->
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/medical_project"/>
      <property name="jakarta.persistence.jdbc.user" value="postgres"/>
      <property name="jakarta.persistence.jdbc.password" value="malik"/>

      <!-- Hibernate settings -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="false"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.jdbc.lob.non_contextual_creation" value="true"/>
      <property name="hibernate.physical_naming_strategy" value="org.hibernate.boot.model.naming.CamelCaseToUnderscoresNamingStrategy"/>

      <!-- JPA schema generation (optional). Set to "none" in production -->
      <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
    </properties>
  </persistence-unit>
</persistence>
